<div class='container' style="margin-top: 100px; margin-bottom: 100px;">
  <div class='row'>
    <div class="col-sm-10 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h3 class="text-center">新規投稿</h3>
      <% if @card.errors.any? %>
        <div class="alert alert-danger">
          <%= @card.errors.count %>件のエラーが発生しました
          <ul class="mb-0">
            <% @card.errors.full_messages.each do |message| %>
              <li><%= message.gsub("Genre", "ジャンル").gsub("Price", "価格").gsub("Name", "商品名").gsub("Image", "商品画像").gsub("Introduction", "商品説明") %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with url: public_cards_path, method: :post, model: @card do |f| %>
      <table class="table table-borderless">
        <tr>
          <th class="text-end">カード画像</th>
            <td>
              <%= f.file_field :image, accept: "image/*", class: "btn btn-outline-secondary " %>
            </td>
        </tr>
        <tr>
          <th class="text-end">カード名</th>
          <td><%= f.text_field :title, class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="text-end">カード説明</th>
          <td><%= f.text_area :body, class: 'form-control' %></td>
        </tr>
        <tr>
          <th class="text-end">価格</th>
          <td><%= f.text_field :price, class: 'form-control', pattern: "[0-9]+", placeholder: '半角' %></td>
        </tr>
        <tr>
          <th class="text-end">レアリティ</th>
          <td>
            <div class="form-group">
              <%= f.select :rarity_id, options_for_select((@raritys || []).map { |rarity| [rarity.name, rarity.id] }, prompt: "選択してください"), { prompt: "選択してください" }, class: 'form-control' %>
            </div>
          </td>
        </tr>
        <tr>
          <th class="text-end">店舗</th>
          <td>
            <div class="form-group">
              <%= f.select :store_id, options_for_select((@stores || []).map { |store| [store.name, store.id] }, prompt: "選択してください"), { prompt: "選択してください" }, class: 'form-control' %>
            </div>
          </td>
        </tr>
        <tr>
          <th class="text-end">販売ステータス</th>
          <td>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-outline-success <%= 'active' if @card.is_active %> rounded">
                <%= f.radio_button :is_active, true, { checked: @card.is_active, class: 'form-check-input', id: 'active' } %> 投稿
              </label>
              <div class="mx-2"></div> <!-- ボタン間のスペースを調整するための空のディビジョン -->
              <label class="btn btn-outline-danger <%= 'active' unless @card.is_active %> rounded">
                <%= f.radio_button :is_active, false, { checked: !@card.is_active, class: 'form-check-input', id: 'inactive' } %> 下書き
              </label>
            </div>
          </td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "新規投稿", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>