<div class="row m-1">
  <h2>投稿詳細</h2>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <!-- 商品の画像 -->
  <div class="col-md-8 text-center">
    <div class="row" style="box-shadow: rgba(0, 0, 0, 0.18) 0px 2px 4px;">
      <div class="col-md-6">
        <%= image_tag @card.image, size: "400x400", class: "img-fluid", style: "max-height: 400px; width: auto;" %>
        <% if current_customer %>
            <%= render 'public/favorites/btn', card: @card %>
        <% end %>
      </div>
      <!-- 商品詳細 -->
      <div class="col-md-6">
        <table class="table">
          <tr>
            <th style="width: 30%; border-top: none;">カード名:</th>
            <td style="width: 70%; border-top: none;"><%= @card.title %></td>
          </tr>
          <tr>
            <th>カード紹介:</th>
            <td><%= @card.body %></td>
          </tr>
          <tr>
            <th>価格:</th>
            <td>￥<%= number_with_delimiter((@card.price).ceil.to_i, delimiter: ',') %></td>
          </tr>
          <tr>
            <th>レアリティ:</th>
            <td><%= @card.rarity.name %></td>
          </tr>
          <tr>
            <th>店舗名:</th>
            <td><%= @card.store.name %></td>
          </tr>
          <% if current_customer %>
            <tr>
              <th>投稿者:</th>
              <td>
                <%= link_to public_customer_path(@card.customer.id) do %>
                  <%= @card.customer.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
          <tr>
            <th>投稿日:</th>
            <td><%= @card.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
          <% if @card.customer == current_customer %>
            <th></th>
            <td>
              <%= link_to "編集", edit_public_card_path(@card.id),class: "btn btn-sm btn-success Edit",data: {"turbolinks"=>false} %>
            </td>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8" id="comment_index">
      <%= render 'public/card_comments/index', card: @card %>
  </div>
  <div class="col-md-2"></div>
</div>
<% if current_customer %>
  <%= render 'public/card_comments/form', card: @card %>
<% end %>
