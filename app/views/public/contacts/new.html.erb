<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card border-secondary shadow">
        <div class="card-header bg-secondary text-white">
          <h2 class="card-title mb-0">お問い合わせ対応</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @contact, url: confirm_public_contacts_path(@contact), method: :post, class: 'needs-validation', novalidate: true) do |form| %>
            <% if @contact.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">エラーが発生しました！</h4>
                <p>以下の問題を解決してください：</p>
                <ul>
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, class: 'form-label' %>
              <%= form.text_field :title, class: 'form-control', required: true %>
              <div class="invalid-feedback">
                タイトルを入力してください。
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :message, class: 'form-label' %>
              <%= form.text_area :message, class: 'form-control', required: true, rows: 5 %>
              <div class="invalid-feedback">
                メッセージを入力してください。
              </div>
            </div>

            <div class="text-center">
              <%= form.submit "確認", class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
