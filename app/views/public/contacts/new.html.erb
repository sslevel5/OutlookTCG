<h1>お問い合わせフォーム</h1>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @contact.errors.count %> があります</strong>
    </div>
  <% end %>

<%= form_with(model: @contact, url: public_contacts_path, method: :post) do |form| %>

  <div class="form-group">
    <%= form.label :title, '件名' %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :message, 'お問い合わせ内容' %>
    <%= form.text_area :message %>
  </div>

  <div class="actions">
    <%= form.submit '送信' %>
  </div>
<% end %>
