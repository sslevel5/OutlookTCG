<div class="container mt-3">
  <div class="row justify-content-between">
    <div class="col-4">
      <h3>お問い合わせ一覧</h3>
    </div>
    <div class="col-2">
  <%= link_to new_public_contact_path, class: 'btn btn-outline-secondary mb-3' do %>
    <i class="fa-regular fa-envelope"></i> お問い合わせ
  <% end %>
  </div>
  </div>
  <div class="list-group">
    <% @contacts.each do |contact| %>
      <%= link_to public_contact_path(contact), class: 'list-group-item list-group-item-action mb-1' do %>
        <%= content_tag :h5, contact.title, class: 'mb-1' %>
        <p class="mb-1"><%= contact.created_at.strftime('%Y年%m月%d日') %></p>
      <% end %>
    <% end %>
  </div>
</div>
