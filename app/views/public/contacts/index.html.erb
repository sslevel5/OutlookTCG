<div class="container">
  <h3>お問い合わせ一覧</h3>

  <%= link_to new_public_contact_path, class: 'btn btn-primary mb-3' do %>
    <i class="fa-regular fa-envelope"></i> お問い合わせ
  <% end %>

  <div class="list-group">
    <% @contacts.each do |contact| %>
      <%= link_to public_contact_path(contact), class: 'list-group-item list-group-item-action' do %>
        <%= content_tag :h5, contact.title, class: 'mb-1' %>
        <p class="mb-1"><%= contact.created_at.strftime('%Y年%m月%d日') %></p>
      <% end %>
    <% end %>
  </div>
</div>
