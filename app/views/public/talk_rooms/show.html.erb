<h1><%= @talk_room.sender.name %> とのDM</h1>

<div id="messages">
  <% @talk_room.talk_room_messages.each do |message| %>
    <div>
      <strong><%= message.customer.name %>:</strong>
      <%= message.message %>
    </div>
  <% end %>
</div>

<%= link_to "New Message", new_public_talk_room_talk_room_messages_path(@talk_room) %>

<%= form_with(model: [@talk_room, TalkRoomMessage.new], local: true) do |form| %>
  <div>
    <%= form.text_area :message, placeholder: "メッセージを入力してください" %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
