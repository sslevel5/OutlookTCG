<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-lg-8">
      <div class="row justify-content-between">
        <div class="col-5">
          <h3><%= link_to @against_customer.name, public_customer_path(@against_customer),class: "text-dark" %>とのトーク</h3>
        </div>
        <div class="col-2 text-right">
          <%= link_to "戻る", public_talk_rooms_path, class: 'btn btn-outline-secondary mb-3' %>
        </div>
      </div>
      <div id="messages">
        <%= render partial: 'comment', locals: { talk_room: @talk_room } %>
      </div>
      <div class="row">
        <div class="col-5 offset-3 fixed-bottom">
          <%= render partial: 'form', locals: { talk_room: @talk_room } %>
        </div>
      </div>
    </div>
  </div>
</div>