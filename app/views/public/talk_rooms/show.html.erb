<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-lg-8">
      <div class="row justify-content-between">
        <div class="col-5">
          <h3><%= @against_customer.name %> とのDM</h3>
        </div>
        <div class="col-2 text-right">
          <%= link_to "戻る", public_talk_rooms_path, class: 'btn btn-outline-secondary mb-3' %>
        </div>
      </div>

      <div id="messages">
        <% @talk_room.talk_room_messages.each do |message| %>
          <% if message.is_active %>
            <%= render partial: 'comment', locals: { message: message } %>
          <% end %>
        <% end %>
        <div class="mb-5">
          <p>　</p>
        </div>
      </div>

      <div class="row">
        <div class="col-5 offset-3 fixed-bottom">
          <%= render partial: 'form', locals: { talk_room: @talk_room } %>
        </div>
      </div>
    </div>
  </div>
</div>