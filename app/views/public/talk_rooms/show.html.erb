<h1><%= @against_customer.name %> とのDM</h1>

<div id="messages">
  <% @talk_room.talk_room_messages.each do |message| %>
    <div>
      <strong><%= message.customer.name %>:</strong>
      <%= message.message %>
    </div>
  <% end %>
</div>

<%= link_to "New Message", root_path(@talk_room) %>

<%= form_with( local: true) do |form| %>
  <div>
    <%= form.text_area :message, placeholder: "メッセージを入力してください" %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
