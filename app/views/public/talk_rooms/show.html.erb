<%= link_to "トークルーム一覧", public_talk_rooms_path %>

<h2><%= @against_customer.name %> とのDM</h2>

<div id="messages">
  <% @talk_room.talk_room_messages.each do |message| %>
    <div>
      <strong><%= message.customer.name %>:</strong>
      <%= message.message %>
      <%= message.created_at.strftime('%Y/%m/%d %H:%M') %>
      <%= form_with(model: message, url: public_talk_room_talk_room_messages_path(@talk_room), local: true) do |form| %>
        <p>
          <%= form.radio_button :is_active, true, class: 'form-check-input', id: 'active' %> 有効
        </p>
        <p>
          <%= form.radio_button :is_active, false, class: 'form-check-input', id: 'inactive' %> 無効
        </p>
        <p>
          <%= form.submit "変更", class: 'btn btn-outline-secondary btn-sm', style: "font-size: 13px;" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>

<%= form_with(model: [@talk_room, @talk_room.talk_room_messages.build], url: public_talk_room_talk_room_messages_path(@talk_room), local: true) do |form| %>
  <div>
    <%= form.text_area :message, placeholder: "メッセージを入力してください" %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
