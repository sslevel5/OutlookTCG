<div class="container">
  <h3>お問い合わせ一覧</h3>

  <div class="list-group">
    <% @contacts.each do |contact| %>
      <%= link_to admin_contact_path(contact), class: 'list-group-item list-group-item-action' do %>
        <div class="d-flex w-100 justify-content-between">
          <%= content_tag :h5, contact.title, class: 'mb-1' %>
          <% if contact.is_active %>
            <span class="badge bg-success">未対応</span>
          <% else %>
            <span class="badge bg-secondary">対応済</span>
          <% end %>
        </div>
        <p class="mb-1"><%= contact.created_at.strftime('%Y年%m月%d日') %></p>
      <% end %>
    <% end %>
  </div>
</div>
