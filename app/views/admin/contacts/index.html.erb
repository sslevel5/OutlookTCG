<div class="container mt-3">
  <h3>お問い合わせ一覧</h3>

  <div class="list-group">
    <% @contacts.each do |contact| %>
      <%= link_to admin_contact_path(contact), class: 'list-group-item list-group-item-action mb-1' do %>
        <div class="d-flex w-100 justify-content-between">
          <%= content_tag :h6, contact.title, class: 'mb-1' %>
          <% if contact.is_active %>
            <span class="badge bg-success btn-sm">未対応</span>
          <% else %>
            <span class="badge bg-secondary btn-sm">対応済</span>
          <% end %>
        </div>
        <div class="d-flex w-100 justify-content-between">
        <p class="mb-1"><%= contact.created_at.strftime('%Y年%m月%d日') %></p>
        <%= contact.customer.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
