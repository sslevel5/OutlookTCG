<div class="container">
  <h2 class="mb-4">お問い合わせ詳細</h2>
  <div class="card border-primary shadow">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">お問い合わせ情報</h5>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <label class="form-label"><strong>顧客名:</strong></label>
        <p class="form-control-static"><%= @contact.customer.name %></p>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>件名:</strong></label>
        <p class="form-control-static"><%= @contact.title %></p>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>内容:</strong></label>
        <p class="form-control-static"><%= @contact.message %></p>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>対応状況:</strong></label>
        <% if @contact.is_active %>
          <span class="badge bg-success">未対応</span>
        <% else %>
          <span class="badge bg-secondary">対応済</span>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to edit_admin_contact_path(@contact), class: 'btn btn-primary' do %>
        対応する
      <% end %>
    </div>
  </div>
</div>
