<div class="container mt-5">
    <div class="row justify-content-center">
    <div class="col-lg-6">
  <div class="card shadow">
    <div class="card-header text-white" style="background-color: #A9A9A9;">
      <h5 class="card-title mb-0">お問い合わせ詳細</h5>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <label class="form-label"><strong>【顧客名】</strong></label>
        <%= link_to admin_customer_path(@contact.customer.id),class: "text-dark" do %>
        <p class="form-control-static"><%= @contact.customer.name %></p>
        <% end %>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>【件名】</strong></label>
        <p class="form-control-static"><%= @contact.title %></p>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>【内容】</strong></label>
        <p class="form-control-static"><%= @contact.message %></p>
      </div>
      <div class="mb-3">
        <label class="form-label"><strong>【対応状況】</strong></label>
        <% if @contact.is_active %>
          <span class="badge bg-success">未対応</span>
        <% else %>
          <span class="badge bg-secondary">対応済</span>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to edit_admin_contact_path(@contact), class: 'btn btn-outline-secondary' do %>
        対応する
      <% end %>
    </div>
  </div>
      </div>
  </div>
</div>
