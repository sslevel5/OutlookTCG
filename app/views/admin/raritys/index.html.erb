<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-sm-9 col-md-7 col-lg-5">
      <h3 class="text-center mb-4">レアリティ一覧・追加</h3>
      <%= form_with url: admin_raritys_path, model: @rarity, class: "mb-4" do |g| %>
        <div class="form-group">
          <%= g.text_field :name, class: 'form-control', placeholder: 'レアリティ' %>
          <% if @rarity.errors.include?(:name) %>
            <p class="text-danger"><%= @rarity.errors.full_messages_for(:name).first %></p>
          <% end %>
        </div>
        <%= g.submit '新規登録', class: "btn btn-outline-secondary btn-block" %>
      <% end %>
      <div class="list-group">
        <% @raritys.each do |ge| %>
          <%= link_to edit_admin_rarity_path(ge), class: "list-group-item list-group-item-action" do %>
            <%= ge.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
