<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h3 class="mb-4 text-center"><strong><%= @customer.name %></strong> さんの会員詳細</h3>
          <table class="table table-borderless">
            <tr>
              <th class="nowrap" style="font-size: 18px;">会員ID</th>
              <td style="font-size: 18px;"><%= @customer.id %></td>
            </tr>
            <tr>
              <th class="nowrap" style="font-size: 18px;">ニックネーム</th>
              <td style="font-size: 18px;"><%= "#{@customer.name}" %></td>
            </tr>
            <tr>
              <th class="nowrap" style="font-size: 18px;">メールアドレス</th>
              <td style="font-size: 18px;"><%= @customer.email %></td>
            </tr>
            <tr>
              <th class="nowrap" style="font-size: 18px;">会員ステータス</th>
              <td style="font-size: 18px;">
                <% if @customer.is_active %>
                  <span class='text-success'>有効</span>
                <% else %>
                  <span class='text-secondary'>退会</span>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success btn-block" %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
